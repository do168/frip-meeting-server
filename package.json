{
  "name": "toy",
  "version": "1.0.0",
  "description": "ToyProject",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "build": "rm -rf dist/* && tsc -p .",
    "dev": "NODE_ENV=development nodemon ./src/server.ts",
    "local": "NODE_ENV=local ts-node src/server.ts",
    "start": "tsc; node ./dist/server.js -i 0",
    "prod": "npm run build && npm run start",
    "test:lint": "eslint --ext .ts ./src",
    "test:lint:fix": "npm run test:lint -- --fix",
    "format": "prettier 'src/**/*.ts' --write",
    "eslint": "eslint 'src/**/*.{ts, js, jsx}'",
    "generate": "tsoa swagger && tsoa routes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/do168/ToyProject.git"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/do168/ToyProject/issues"
  },
  "homepage": "https://github.com/do168/ToyProject#readme",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "config": "^3.3.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "js-yaml": "^3.14.1",
    "mybatis-mapper": "^0.6.5",
    "mysql2": "^2.2.5",
    "promise-mysql": "^5.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/config": "0.0.37",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^14.14.17",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "body-parser": "^1.19.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
